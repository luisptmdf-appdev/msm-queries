<h1>List of all directors</h1>

<table border="1">

  <% @list_of_directors.each do |record| %>

    <tr>

      <td>
        <%= record.id %>
      </td>
      <td>
        <img src="https://robohash.org/<%= record.name %>">
      </td>
      <td>
        <%= record.name %>
      </td>
      <td>
        <%= record.dob %>
      </td>
      <td>
        <a href="/directors/<%= record.id %>">Show details</a>
      </td>
      
    </tr>

  <% end %>
      
</table>